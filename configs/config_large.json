{
  "model": {
    "latent_channels": 16,
    "num_embeddings": 16384,
    "embedding_dim": 768,
    "hidden_dim": 2048,
    "num_layers": 24,
    "num_heads": 32,
    "dropout": 0.1,
    "max_frames": 128
  },
  "diffusion": {
    "num_train_timesteps": 1000,
    "min_step": 20,
    "max_step": 980,
    "beta_schedule": "cosine"
  },
  "training": {
    "num_epochs": 200,
    "num_samples": 100000,
    "batch_size": 2,
    "learning_rate": 5e-05,
    "beta1": 0.9,
    "beta2": 0.999,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "gradient_accumulation_steps": 4,
    "warmup_steps": 2000,
    "quantization_weight": 0.05,
    "num_workers": 8
  },
  "data": {
    "num_frames": 32,
    "latent_height": 64,
    "latent_width": 64
  },
  "logging": {
    "use_wandb": true,
    "project_name": "quantized-diffusion-dmd",
    "run_name": "large_model_v1",
    "log_interval": 100,
    "save_interval": 2000,
    "max_checkpoints": 10
  },
  "output_dir": "./outputs/quantized_dmd_large"
}