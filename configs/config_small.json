    "warmup_steps": 500,
    "quantization_weight": 0.1,
    "num_workers": 4
  },
  "data": {
    "num_frames": 8,
    "latent_height": 32,
    "latent_width": 32
  },
  "logging": {
    "use_wandb": false,
    "project_name": "quantized-diffusion-dmd",
    "run_name": "small_model_test",
    "log_interval": 10,
